doctype html
html
  head
    title Login - HIS
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/estilos.css')
  body.fondo-login

    h2.text-white.text-center.px-4.rounded(style="background-color: #004080; padding-top: 16px; padding-bottom: 16px") Sistema Hospitalario San Luis
    
    .d-flex.flex-wrap.justify-content-center.align-items-center.gap-6.mt-4
         
    .d-flex.justify-content-center.mt-5
      .card.shadow.p-4(style='width: 480px; background-color: rgba(255,255,255,0.95);')
        h4.mb-3.text-center Iniciar Sesión
        if mensaje
          .alert.alert-danger.text-center= mensaje
        form(action='/login' method='POST')
          .mb-3
            label.form-label(for='username') Usuario:
            input.form-control(type='text', name='username', id='username', required=true)
          .mb-3
            label.form-label(for='password') Contraseña:
            input.form-control(type='password', name='password', id='password', required=true)
          button.btn.btn-primary.w-100(type='submit') Ingresar


    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
