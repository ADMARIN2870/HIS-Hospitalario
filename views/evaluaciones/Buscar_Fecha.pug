extends ../layout

block content
  h2 Buscar Evaluaciones por Fecha

  form(method="POST")
    label Fecha:
    input(type="date", name="fecha", required)
    button(type="submit") Buscar

  if evaluaciones
    h3 Evaluaciones para #{new Date(fecha).toLocaleDateString('es-AR')}
    table
      thead
        tr
          th Paciente
          th Fecha
          th Usuario
          th Temperatura
          th Presión Arterial
          th Frecuencia Cardíaca
      tbody
        each e in evaluaciones
          tr
            td= `${e.nombre_paciente} ${e.apellido_paciente}`
            td= new Date(e.fecha).toLocaleDateString('es-AR')
            td= e.username
            td= e.temperatura
            td= e.presion_arterial
            td= e.frecuencia_cardiaca
